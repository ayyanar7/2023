    <FrameLayout
android:layout_marginTop="50dp"
        android:id="@+id/homeframelayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_with_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/homeframelayout">

        <com.ag.bta.ui.custombottombar.library.custombottomnavview.BottomNavigationViewEx
            android:id="@+id/bnve_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:itemIconTint="@color/selector_item_primary_color"
            app:itemTextColor="@color/selector_item_primary_color"
            app:menu="@menu/bottombarview_menu_bottom" />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:src="@drawable/dashboard"

            android:tint="@color/colorGrey"
            app:backgroundTint="@android:color/white"
            app:borderWidth="0dp"
            app:elevation="9dp" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>